<%= form_for(@post_address) do |f| %>
  <% if @post_address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post_address.errors.count, "error") %> förhindrade den här adressen från att bli sparad</h2>

      <ul>
      <% @post_address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :municipality %><br>
    <%= f.text_field :municipality %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :post_number_and_city %><br>
    <%= f.text_field :post_number_and_city %>
  </div>
  <div class="actions">
    <%= f.submit 'Spara' %>
  </div>
<% end %>
