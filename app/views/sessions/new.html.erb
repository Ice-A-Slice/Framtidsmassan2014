<div class="row">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend>Logga in</legend>
        <div class="col-xs-2">
          <%= label_tag :name, 'Användarnamn:' %>
        </div>
          <div class="col-xs-10">
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div class="col-xs-2">
          <%= label_tag :password, 'Lösenord:' %>
        </div>
        <div class="col-xs-10">
          <%= password_field_tag :password, params[:password]%>
        </div>
        <div>
          <%= submit_tag "Logga in" %>
        </div>
      </fieldset>
  <% end %>
</div>
